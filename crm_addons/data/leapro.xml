<odoo>
        <record model="ir.actions.server" id="update_calendar_from_inspection">
            <field name="name"> Update Calendar from Inspection</field>
            <field name="model_id" ref="model_mail_activity"/>
            <field name="code">
                object.save():
                    env['calendar.event'].sudo().create({'partner_ids': [object.x_technician_id, object.res_user_id],'start_datetime':object.date_deadline })
            </field>
        </record>
        <record>
            <field name="name">mail.activity.form.inherit.calendar.inspection</field>
            <field name="model">mail.activity</field>
            <field name="inherit_id" ref="mail_activity"/>
            <field name="arch" type="xml">
                <xpath expr="//button[@name='action_close_dialog']" position="replace">
                    <button string="Schedule a meeting" attrs="{'invisible': [('mail_activity_type', '!=', 'Inspection')]}" name="update_calendar_from_inspection" type="object" class="btn-primary"/>
                </xpath>
            </field>
        </record>
</odoo>